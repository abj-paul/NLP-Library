#include<iostream>
#include<string>
#include<vector>

using namespace std;
#define LINE pair<string,vector<string>>
class DefineNoisyChannel {
 private:
  const string filename = "spell-errors.txt";
  const int number_of_alphabets = 26;
  vector<LINE>database;

  void load_file();
  
  vector<vector<int>>insertion_confusion_matrix;
  vector<vector<int>>deletion_confusion_matrix;
  vector<vector<int>>substitution_confusion_matrix;
  vector<vector<int>>transposition_confusion_matrix;

  void initialize_confusion_matrices();
public:
  DefineNoisyChannel();
  void print_matrices();
};
